{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glm-tray",
  "version": "0.1.0",
  "identifier": "com.kiwina.glm-tray",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GLM Tray",
        "width": 720,
        "height": 600,
        "minWidth": 720,
        "minHeight": 600,
        "maxWidth": 720,
        "maxHeight": 600,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "shortDescription": "System tray quota monitor for GLM API keys",
    "longDescription": "A lightweight system tray application that monitors API key quota usage with configurable polling, wake scheduling, exponential backoff, and multi-key support.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
