{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glm-tray",
  "version": "0.1.0",
  "identifier": "com.kiwina.glm-tray",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GLM Tray Settings",
        "width": 660,
        "height": 580,
        "minWidth": 660,
        "minHeight": 580,
        "maxWidth": 660,
        "maxHeight": 580,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
