{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glm-tray",
  "version": "0.0.3",
  "identifier": "com.kiwina.glm-tray",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GLM Tray",
        "width": 500,
        "height": 500,
        "minWidth": 500,
        "minHeight": 500,
        "maxWidth": 500,
        "maxHeight": 500,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "category": "Utility",
    "shortDescription": "System tray quota monitor for GLM API keys",
    "longDescription": "A lightweight system tray application that monitors API key quota usage with configurable polling, wake scheduling, exponential backoff, and multi-key support.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://github.com/kiwina/glm-tray/releases/latest/download/updater.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxOTUxMjAxQzlDOUY3RDAKUldUUTk4bkpBUktWMGJORmFYeE1KdUNXcCt3Uk8yZjBJMXpIVmo5eHVjY1FJWmFqVmJYQ3VmN3MK"
    }
  }
}
